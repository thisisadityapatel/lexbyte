// test conditions with a single boolean operand
if !1==1 then println "!1==1"; fi;
if !1==2 then println "!1==2"; fi;
if 1==1 & 2==2 then println "1==1 & 2==2"; fi;
if 1!=1 & 2==2 then println "1!=1 & 2==2"; fi;
if 1==1 & 2!=2 then println "1==1 & 2!=2"; fi;
if 1!=1 & 2!=2 then println "1!=1 & 2!=2"; fi;
if 1==1 | 2==2 then println "1==1 | 2==2"; fi;
if 1!=1 | 2==2 then println "1!=1 | 2==2"; fi;
if 1==1 | 2!=2 then println "1==1 | 2!=2"; fi;
if 1!=1 | 2!=2 then println "1!=1 | 2!=2"; fi;
